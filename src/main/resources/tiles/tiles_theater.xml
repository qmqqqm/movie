<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
"-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
"http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>
	<!--준기- no tiles -->
	<definition name="notile" template="/WEB-INF/views/common/no-layout.jsp">
         <put-attribute name="body" value=""/>
    </definition>
     
	<!--준기-팝업창 -->
	<definition name="/theater/popup" extends="notile">
		<put-attribute name="body" value="/WEB-INF/views/theater/popup.jsp"/>
	</definition>
	
	<!--준기-극장이미지추가 페이지 -->
	<definition name="/admin/theaterImage"  extends="baseLayout">
		<put-attribute name="title" value="극장이미지추가페이지" />
		<put-attribute name="body"  value="/WEB-INF/views/theater/admin/theaterImage.jsp" />
	</definition>
	
	<!--윤이-극장  -->
	<definition name="/theater/theaters"  extends="baseLayout">
		<put-attribute name="title" value="극장" />
		<put-attribute name="body"  value="/WEB-INF/views/theater/theaters.jsp" />
	</definition>
	
	<!--윤이-관리자-극장 추가  -->
	<definition name="/theater/admin/createTheater"  extends="baseLayout">
		<put-attribute name="title" value="관리자-새로운 영화관 추가" />
		<put-attribute name="body"  value="/WEB-INF/views/theater/admin/createTheater.jsp" />
	</definition>
	
	<!--윤이-관리자-극장 리스트  -->
	<definition name="/theater/admin/theaterList"  extends="baseLayout">
		<put-attribute name="title" value="관리자-극장리스트" />
		<put-attribute name="body"  value="/WEB-INF/views/theater/admin/theaterList.jsp" />
	</definition>
	
	<!--윤이-관리자-극장정보수정  -->
	<definition name="/theater/admin/modifyTheater"  extends="baseLayout">
		<put-attribute name="title" value="관리자-극장정보수정" />
		<put-attribute name="body"  value="/WEB-INF/views/theater/admin/modifyTheater.jsp" />
	</definition>
	
	<!--윤이-관리자-상영시간표정보수정  -->
	<definition name="/theater/admin/createTimes"  extends="baseLayout">
		<put-attribute name="title" value="관리자-상영시간표수정" />
		<put-attribute name="body"  value="/WEB-INF/views/theater/admin/createTimes.jsp" />
	</definition>
	
	<!--윤이-관리자-상영시간표리스트  -->
	<definition name="/theater/admin/timesList"  extends="baseLayout">
		<put-attribute name="title" value="관리자-상영시간표" />
		<put-attribute name="body"  value="/WEB-INF/views/theater/admin/timesList.jsp" />
	</definition>
</tiles-definitions>

